{
    "name": "BlogPost",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "slug": {
            "type": "string",
            "description": "URL slug"
        },
        "excerpt": {
            "type": "string",
            "description": "Short summary"
        },
        "content": {
            "type": "string",
            "description": "Full blog content in HTML"
        },
        "featured_image": {
            "type": "string"
        },
        "category": {
            "type": "string",
            "enum": [
                "web-development",
                "design",
                "seo",
                "marketing",
                "technology",
                "tips"
            ],
            "default": "web-development"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "meta_title": {
            "type": "string"
        },
        "meta_description": {
            "type": "string"
        },
        "author_name": {
            "type": "string"
        },
        "read_time": {
            "type": "number",
            "description": "Estimated read time in minutes"
        },
        "is_published": {
            "type": "boolean",
            "default": false
        },
        "is_featured": {
            "type": "boolean",
            "default": false
        }
    },
    "required": [
        "title",
        "content"
    ]
}