{
    "name": "SiteSettings",
    "type": "object",
    "properties": {
        "setting_key": {
            "type": "string",
            "description": "Unique key for the setting"
        },
        "setting_value": {
            "type": "string",
            "description": "Value stored as JSON string"
        },
        "setting_type": {
            "type": "string",
            "enum": [
                "general",
                "seo",
                "social",
                "contact",
                "hero",
                "about",
                "pricing"
            ],
            "default": "general"
        }
    },
    "required": [
        "setting_key",
        "setting_value"
    ]
}