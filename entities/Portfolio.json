{
    "name": "Portfolio",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "description": "Project title"
        },
        "description": {
            "type": "string",
            "description": "Project description"
        },
        "category": {
            "type": "string",
            "enum": [
                "e-commerce",
                "corporate",
                "educational",
                "healthcare",
                "startup",
                "portfolio",
                "other"
            ],
            "description": "Project category"
        },
        "client_name": {
            "type": "string"
        },
        "project_url": {
            "type": "string"
        },
        "thumbnail_url": {
            "type": "string"
        },
        "images": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Gallery images"
        },
        "tech_stack": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Technologies used"
        },
        "completion_date": {
            "type": "string",
            "format": "date"
        },
        "is_featured": {
            "type": "boolean",
            "default": false
        },
        "is_active": {
            "type": "boolean",
            "default": true
        }
    },
    "required": [
        "title",
        "description",
        "category"
    ]
}